%include {
#include <assert.h>
#include <string.h>
#include "csg.h"

#if defined(__GNUC__) && (__GNUC__ == 4 && __GNUC_MINOR__ >= 3) && !defined(__clang__)
#  pragma GCC diagnostic ignored "-Wunused-variable"
#  pragma GCC diagnostic ignored "-Wunused-parameter"

#endif
#if defined(__clang__)
#  pragma clang diagnostic ignored "-Wunused-variable"
#  pragma clang diagnostic ignored "-Wunused-parameter"
#endif

}

%token_type {token_t *}
%extra_argument {app_data_t *appData}

/* priorities , not sure if this is how is intended to be used */

%left GROUP_BEGIN.
%left GROUP_CONTENT.
%left GROUP_END.

/* Initial, simple grammar, just for testing  */

start_symbol ::= code.
code ::= groupb.
groupb ::= groupb group_content group_end.

groupb::= GROUP_BEGIN.
{
  fprintf(appData->outfile, "we found group() {\n");
}

groupb ::= .

group_content ::= GROUP_CONTENT .
{
  fprintf(appData->outfile, "inside group() we found a function\n");
}

group_end ::= GROUP_END.
{
  fprintf(appData->outfile, "we found the end of group()\n");
}
